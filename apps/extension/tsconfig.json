{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "outDir": "./dist",
    "rootDir": "src",
    "declaration": true,
    "target": "ES2020",
    "lib": ["DOM", "ES2020", "WebWorker"],
    "typeRoots": ["./node_modules/@types"],
    "types": ["chrome", "firefox-webext-browser"]
